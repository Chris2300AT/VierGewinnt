<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="150.0" prefWidth="500.0" spacing="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.viergewinnt.AddButtonFolderController">
    <Label text="Add Folder">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </Label>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
          <TextField fx:id="addButtonTextfield" promptText="Name" HBox.hgrow="ALWAYS" />
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
   <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button alignment="CENTER_RIGHT" onAction="#handleSave" text="Save" />
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
</VBox>